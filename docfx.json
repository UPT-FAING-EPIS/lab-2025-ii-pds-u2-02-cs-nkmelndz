{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "Notifications",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        },
        {
          "src": "CustomerApp",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml",
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ],
        "src": "api",
        "dest": "documentation/api"
      },
      {
        "files": [
          "**/*.md",
          "**/toc.yml"
        ],
        "exclude": [
          "**/obj/**",
          "**/_site/**",
          "README.md"
        ]
      },
      {
        "files": [
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appName": "Notifications & CustomerApp Documentation",
      "_appTitle": "Notifications & CustomerApp API Documentation",
      "_appFooter": "Copyright Â© 2024. All rights reserved.",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_appLogoPath": "images/logo.png"
    },
    "fileMetadata": {
      "priority": {
        "**.md": {
          "priority": 1,
          "keywords": "content"
        },
        "api/**.yml": {
          "priority": 2,
          "keywords": "api"
        }
      }
    },
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false
  }
}