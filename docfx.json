{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.cs"],
          "src": "CustomerApp"
        },
        {
          "files": ["**/*.cs"],
          "src": "Notifications"
        }
      ],
      "dest": "_site/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.md", "**/*.yml"]
      }
    ],
    "resource": [
      {
        "files": ["**/*.png", "**/*.jpg", "**/*.svg", "**/*.woff", "**/*.woff2"]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_enableSearch": true
    },
    "template": ["default"]
  }
}